<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ekezet.portalgun"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.PortalGun"
        tools:ignore="AllowBackup"
        >

        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.Transparent"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.screens.splash.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.Splash"
            />

        <activity
            android:name=".ui.screens.characters.CharactersActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PortalGun.NoActionBar"
            />

        <activity
            android:name=".ui.screens.characterDetails.CharacterDetailsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PortalGun.NoActionBar"
            />

    </application>

</manifest>
